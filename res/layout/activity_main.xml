<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/main_head" 
        />
   
    <RelativeLayout 
    android:id="@+id/prell"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical" >
    <Button
        android:id="@+id/choosePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn2"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:text="@string/choosepic" 
        android:textColor="@color/white"    
 
    />
    <com.gc.materialdesign.views.ButtonFloat
                android:id="@+id/buttonFloat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:background="@color/floatbuttoncolor"
                materialdesign:animate="true"
                materialdesign:iconDrawable="@drawable/ic_action_choose" 
                 android:visibility="gone"
                />
     
            <com.gc.materialdesign.views.Card
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
			    android:layout_alignParentRight="true"
			     android:visibility="gone"
                android:background="#ffffff" >
                 <ImageView
			        android:id="@+id/ivbg"
			        android:layout_width="100dip"
			        android:layout_height="200dip"
			        android:background="@drawable/bg2"
			        android:layout_margin="5dip"
			        /> 
                
            </com.gc.materialdesign.views.Card>
      
    
    </RelativeLayout>
                   
     <RelativeLayout 
    android:id="@+id/afterll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    >
     
     	<SurfaceView  
		android:id="@+id/surfaceView"
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent" 
        />
     	<ImageView
        android:id="@+id/iv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
     	<LinearLayout 
	    android:id="@+id/prell2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    <Button
	        android:id="@+id/setScale"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn2"
	        android:layout_margin="10dip"
	        android:text="@string/setscale" 
	        android:textColor="@color/white"    
	        
	    />
	    <Button
	        android:id="@+id/rotate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn2"
	        android:layout_margin="10dip"
	        android:text="@string/rotate" 
	        android:textColor="@color/white"  
	        
	    />
	     <Button
	        android:id="@+id/enter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn2"
	        android:layout_margin="10dip"
	        android:text="@string/enter" 
	        android:textColor="@color/white"  
	        
	    />
	    </LinearLayout>
	   <LinearLayout 
	    android:id="@+id/preUp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:visibility="gone"
	    android:orientation="horizontal">
	    <Button
	        android:id="@+id/confirm"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn2"
	        android:layout_margin="5dip"
	        android:text="@string/confirm" 
	        android:textColor="@color/white"  
	        android:layout_weight="1"  
	    />
	    <Button
	        android:id="@+id/cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn2"
	        android:layout_margin="5dip"
	        android:text="@string/cancel" 
	        android:textColor="@color/white"   
	        android:layout_weight="1" 
	        android:visibility="gone"
	    />
	    </LinearLayout>
	    <LinearLayout 
	    android:id="@+id/preDown"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:visibility="gone"
	    android:orientation="vertical" >
	    <Button
	        android:id="@+id/trim"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn2"
	        android:layout_margin="5dip"
	        android:text="@string/trim" 
	        android:textColor="@color/white"    
	    />
	    
	    </LinearLayout>
	 
       	<ImageView 
		  android:background="@drawable/pin"
		  android:id="@+id/ImageView"
		  android:layout_width="wrap_content" 
		  android:layout_height="wrap_content" 
		  android:visibility="gone"
		  android:layout_centerInParent="true"
		/>
        <ImageView 
		  android:background="@drawable/pin2"
		  android:id="@+id/ImageView2"
		  android:layout_width="wrap_content" 
		  android:layout_height="wrap_content" 
		  android:visibility="gone"
		  android:layout_centerInParent="true"
		/>
          <RelativeLayout 
		    android:id="@+id/trimrl"
		    android:layout_width="fill_parent"
		    android:layout_height="200dip"
		    android:visibility="invisible"
		    android:layout_above="@+id/preDown"
		    android:layout_margin="5dip"
		    >
	       
	        <ImageView 
			  android:id="@+id/stop"
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content" 
			  android:src="@drawable/stop"
			  android:layout_centerInParent="true"
			/>
	        <ImageView 
			  android:id="@+id/down"
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content" 
			  android:src="@drawable/directional_down"
			  android:layout_centerHorizontal="true"
			  android:layout_below="@+id/stop"
			/>
	       <ImageView 
			  android:id="@+id/up"
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content" 
			  android:src="@drawable/directional_up"
			  android:layout_centerHorizontal="true"
			   android:layout_above="@+id/stop"
			/>
	      
	        
	        <ImageView 
			  android:id="@+id/right"
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content" 
			  android:src="@drawable/directional_right"
			  android:layout_toRightOf="@+id/stop"
			  android:layout_centerVertical="true"
			/>
	   
	        <ImageView 
			  android:id="@+id/left"
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content" 
			  android:src="@drawable/directional_left"
			  android:layout_toLeftOf="@+id/stop"
			  android:layout_centerVertical="true"
			/>
	         
		    </RelativeLayout>
		    <RelativeLayout 
		    android:id="@+id/InnerAfterll"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		  
		  
		    >
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
